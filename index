            <label>üìù Referencia:</label>
            <input id="referencia" placeholder="Referencia adicional">
        </div>
        
        <div id="bloquesCategorias"></div>
        <button class="btn" onclick="agregarCategoria()">‚ûï Agregar Categor√≠a</button>
        
        <div id="totalGeneral" class="total-general" style="display: none;">
            üí∞ TOTAL GENERAL: $<span id="montoTotalGeneral">0</span>
        </div>
        
        <div style="text-align: center; margin-top: 30px;">
            <button class="btn btn-primary" onclick="generarCotizacion()">üìã Generar Cotizaci√≥n</button>
            <button class="btn" onclick="descargarPDF()">üìÑ Descargar PDF</button>
            <button class="btn" onclick="compartirWhatsApp()">üì± Compartir por WhatsApp</button>
        </div>
        
        <div id="resultadoCotizacion" class="resultado-cotizacion">
            <h3>üìã Resumen de Cotizaci√≥n</h3>
            <div id="resumenItems"></div>
        </div>
